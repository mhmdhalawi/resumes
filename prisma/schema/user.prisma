model User {
    id                 String         @id @default(uuid()) @db.Uuid
    email              String         @unique
    name               String
    password           String
    created_at         DateTime       @default(now())
    role               Role           @default(USER)
    status             Status         @default(INACTIVE)
    resume             Resume[]
    admin_logs         ActivityLogs[]
    affected_user_logs ActivityLogs[] @relation("user_log")

    @@map("users")
}

enum Role {
    USER
    ADMIN
}

enum Status {
    ACTIVE
    INACTIVE
    SUSPENDED
}
