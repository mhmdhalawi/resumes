model ActivityLogs {
    id              Int      @id @default(autoincrement())
    admin           User     @relation(fields: [adminId], references: [id])
    adminId         String
    action          Action
    affected_entity Entity
    entity_id       String
    created_at      DateTime @default(now())

    @@map("activitylogs")
}

enum Action {
    SUSPEND
    ACTIVATE
    DELETE
}

enum Entity {
    USER
    RESUME
}
