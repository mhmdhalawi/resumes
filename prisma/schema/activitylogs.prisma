model ActivityLogs {
    admin           User     @relation(fields: [adminId], references: [id], onDelete: Cascade, map: "admin")
    adminId         String   @db.Uuid
    action          Action
    affected_entity Entity
    user            User?    @relation("user_log", fields: [affected_id], references: [id], onDelete: Cascade, map: "user")
    resume          Resume?  @relation("resume_log", fields: [affected_id], references: [id], onDelete: Cascade, map: "resume")
    affected_id     String   @db.Uuid
    created_at      DateTime @default(now())

    @@id([adminId, affected_id])
    @@map("activity_logs")
}

enum Action {
    SUSPEND
    ACTIVATE
    DELETE
}

enum Entity {
    USER
    RESUME
}
